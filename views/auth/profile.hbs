<div id="principal">
<div class="center">
  <img src="images/categories/alina.jpg" class="profile circle">
</div>

  <ul id="tabs-swipe-demo" class="tabs center">
    <li class="tab col s12 m4 l4"><a class="active" href="#test-swipe-1">Mis Productos</a></li>
    <li class="tab col s12 m4 l4"><a href="#test-swipe-2">Historial</a></li>
    <li class="tab col s12 m4 l4"><a href="#test-swipe-3">SubAppi</a></li>
  </ul>



<div id="test-swipe-1" class="col s12">
  <div class="container">
    <div class="row">
    {{#each products}}
          <div class="col s12 m4 l3">
            <div class="card">
              <a href="#">
                <div class="card-image">
                  <img class="resizeimg" src="{{this.photos.[0]}}" alt="Card image cap">
                </div>
                <div class="card-content">
                  <p class="center">{{this.name}}</p>
                  <p class="center">{{this.desc}}</p>
                  <p class="center">Ubicación</p>
                  <p class="center">{{this.price}}</p>
                  <p class="center">Disponible</p>
                </div>
              </a>
            </div>
          </div>
    {{/each}}


        <a href="/nuevo" class="size">
            <div class="centered">
              <div class="plus" id="plus">
                <div class="plus__line plus__line--v"></div>
                <div class="plus__line plus__line--h"></div>
              </div>
            </div>
        </a>


    </div>
  </div>
</div>


<div id="test-swipe-2" class="col s12">
    
    <div class="container">
      <table>
        <thead>
          <tr>
              <th>Productos</th>
              <th># Rentas</th>
              <th>Precio</th>
              <th>Total</th>
          </tr>
        </thead>

        <tbody>

          {{#each products}}
          <tr>
          <td>{{this.name}}</td>
          <td>{{rents}}3*</td>
          <td>{{this.price}}</td>
          <td>$250*</td>            
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div id="test-swipe-3" class="col s12">
    <div class="container">
      <h3 class="center">¿Ya no quieres tus productos?</h3>
      <p class="center">Subastalos en Subappi</p>
    </div>
  </div>




<style>
  #principal{
    margin-top: 2%;
  }
  .profile{
    width: 250px;
    height: 250px;
  }

@media (max-width: 990px) {
  .resizeimg {
    height: auto;
  }
}

@media (min-width: 1000px) {
  .resizeimg {
    width: auto;
    height: 350;
  }
}

.card img{
  height: 150px;
}

</style>